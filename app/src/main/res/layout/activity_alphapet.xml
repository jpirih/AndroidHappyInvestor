<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kekec_apps.android.happyinvestor.AlphapetActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alphabetTitle"
        android:text="@string/alphabet_activity_title"
        android:textSize="32sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alphabetBackBtn"
        android:layout_below="@+id/alphabetTitle"
        android:layout_marginTop="20dp"
        android:background="#FF0D00"
        android:text="@string/alphabet_back_btn_text"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alphabetBackBtn"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/date"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/date"
        android:orientation="vertical"
        android:paddingTop="10dp">

    </LinearLayout>



</RelativeLayout>
